---
import Aside from '../components/Aside.astro'
import Main  from '../components/Main.astro'
import Player from '../components/Player.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Spotify</title>
	</head>
	<body class="grid grid-cols-[420px_1fr_1fr] grid-rows-[500px_auto] bg-black m-2">
		<Aside/>
		<Main />
		<Player/>
	</body>
	<style>
		html{
			height: 100vh;
		}
		body{
			min-height: 100%;
			min-width: 100%;
			grid-template-areas: 
			"Aside Main Main"
			"Player Player Player";
		}
	</style>
</html>



