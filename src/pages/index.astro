---
import Aside from '../components/Aside.astro'
import Main  from '../components/Main.astro'
import Player from '../components/Player.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Spotify</title>
	</head>
	<body class="grid grid-cols-[420px_1fr_1fr] grid-rows-[500px_auto] bg-black m-2">
		<Aside/>
		<Main />
		<Player/>
	</body>
	<style>
		html{
			min-height: 100vh;
      min-width:100vh;
			font-family: "CircularStd",sans-serif,system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		}
		body{
      overflow:hidden;
			min-height: 100vh;
			min-width: 100vh;
      scrollbar-color: rgb(158, 158, 158) #121212;
			grid-template-areas: 
			"Aside Main Main"
			"Player Player Player";  
		}

		@font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Medium.woff2") format("woff2");
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Book.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Light.woff2") format("woff2");
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: "CircularStd";
        src: url("/fonts/CircularStd-Black.woff2") format("woff2");
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
	</style>
</html>



